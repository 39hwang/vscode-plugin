{
  "name": "kite",
  "displayName": "kite",
  "description": "kite integration",
  "version": "0.0.1",
  "publisher": "Kiteco",
  "engines": {
    "vscode": "^1.10.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./src/kite",
  "contributes": {
    "commands": [
      {
        "command": "kite.search",
        "title": "Kite: Search"
      },
      {
        "command": "kite.status",
        "title": "Kite: Status"
      },
      {
        "command": "kite.help",
        "title": "Kite: Help"
      },
      {
        "command": "kite.open-settings",
        "title": "Kite: Settings"
      },
      {
        "command": "kite.open-permissions",
        "title": "Kite: Permissions"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "kite.open-settings"
        },
        {
          "command": "kite.open-permissions"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Kite Configuration",
      "properties": {
        "kite.showTourOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show the Kite tour on startup or not."
        },
        "kite.pollingInterval": {
          "type": "integer",
          "default": 5000
        },
        "kite.sidebarDebugMode": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, each time a view is rendered in the kite sidebar the sample.html file will be updated with the sidebar content. It allows for quick inspection in a real browser."
        },
        "kite.developerMode": {
          "type": "boolean",
          "default": false,
          "description": "Displays JSON data used by a view"
        },
        "kite.loggingLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "silly",
            "verbose",
            "debug",
            "info",
            "warning",
            "error"
          ],
          "description": "The verbosity level of Kite's logs."
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "dependencies": {
    "atob": "^2.0.3",
    "formidable": "^1.1.1",
    "kite-installer": "^0.23.0",
    "md5": "^2.2.0",
    "opn": "^1.0.0",
    "rollbar": "*"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "eslint": "^3.6.0",
    "expect.js": "^0.3.1",
    "mocha": "^2.3.3",
    "sinon": "^2.3.5",
    "typescript": "^2.0.3",
    "vscode": "^1.0.0"
  }
}
