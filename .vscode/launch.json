// A launch configuration that launches the extension inside a new window
{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/src/index.js" ],
            "stopOnEntry": false,
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}/src/index.js", "--extensionTestsPath=${workspaceFolder}/test", "--disable-extensions" ],
            "stopOnEntry": false
        }
    ]
}